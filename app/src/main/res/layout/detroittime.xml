<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.GameWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:theme="@style/Theme.GameWidget.AppWidgetContainer">

    <ImageView
        android:id="@+id/detroitback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/detroittime" />


    <LinearLayout
        android:id="@+id/clockxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/timeTextx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format24Hour="HH:mm"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/timeTextxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5"
            android:format12Hour=":ss"
            android:format24Hour=":ss"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clockxxxx"
        android:layout_alignStart="@+id/clockxxxx"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="-20dp"
        android:textColor="#FFFFFFFF"
        android:text="时间" />

</RelativeLayout>